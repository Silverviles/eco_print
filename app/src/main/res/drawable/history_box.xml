<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Outer Layer: Grey Border -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="50dp" />
            <solid android:color="@color/light_green" /> <!-- Grey color for border -->
        </shape>
    </item>
    <!-- Middle Layer: White Shape -->
    <item android:left="3dp" android:right="3dp" android:top="3dp" android:bottom="3dp"> <!-- Adjust padding for border thickness -->
        <shape android:shape="rectangle">
            <corners android:radius="50dp" />
            <solid android:color="@color/white" />
        </shape>
    </item>
    <!-- Inner Layer: Shadow -->
    <item android:top="8dp"> <!-- Adjust top offset for shadow -->
        <shape android:shape="rectangle">
            <corners android:radius="50dp" />
            <solid android:color="@android:color/transparent" />
            <padding android:bottom="8dp" /> <!-- Adjust as needed -->
            <corners android:radius="50dp" />
        </shape>
    </item>
</layer-list>
